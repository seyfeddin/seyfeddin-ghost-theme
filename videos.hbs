{{!< default}}
{{! The tag above means: insert everything in this file
into the {body} of the default.hbs template }}

{{> header }}

<section id="videos">
    <h1>SwiftUI ile iOS Geliştirme</h1>
    {{#get "posts" filter="tag:swiftui101" include="tags" order="published_at desc"}}
    {{#foreach posts}}
      <article class="home-post">
        <a class="home-post-content-link" href="{{url}}">
          <time datetime="{{date published_at format="YYYY-MM-DD HH:mm"}}">{{date published_at format="DD MMMM YYYY"}}</time>
          <h2 class="home-video-title swiftui101">
            {{title}}
          </h2>
          <p class="home-video-excerpt">
            {{excerpt}}
          </p>
        </a>
      </article>
      {{/foreach}}
    {{/get}}
    {{!-- <a href="#" class="all-posts">See all posts</a> --}}

    <h1>SwiftUI'a Derin Bakış</h1>
    {{#get "posts" filter="tag:swiftuideepdive" include="tags" order="published_at desc"}}
    {{#foreach posts}}
      <article class="home-post">
        <a class="home-post-content-link" href="{{url}}">
          <time datetime="{{date published_at format="YYYY-MM-DD HH:mm"}}">{{date published_at format="DD MMMM YYYY"}}</time>
          <h2 class="home-video-title swiftuideepdive">
            {{title}}
          </h2>
          <p class="home-video-excerpt">
            {{excerpt}}
          </p>
        </a>
      </article>
      {{/foreach}}
    {{/get}}
  </section>

  {{#contentFor "scripts"}}
<script>

function selectItemByValue(elmnt, value){
  console.log(elmnt);
  for(var i=0; i < elmnt.options.length; i++)
  {
    console.log(elmnt.options[i].value)
    if(elmnt.options[i].value === value) {
      elmnt.selectedIndex = i;
      break;
    }
  }
}

$(document).ready(function () {
  console.log(window.location.pathname);
  var pathName = window.location.pathname;
  if (pathName.endsWith('/')) {
        selectItemByValue(document.getElementById('post-category'), pathName.substring(0, pathName.length - 1))
  } else {
    selectItemByValue(document.getElementById('post-category'), pathName)
  }
  
});
</script>
